@model Web_AIA.Models.AnnonceFormViewModel
@{
    var categories = ViewBag.Categories as IEnumerable<Web_AIA.Entities.Categorie> ?? Enumerable.Empty<Web_AIA.Entities.Categorie>();
}

<div class="row g-4">
    <!-- Main Form -->
    <div class="col-lg-8">
        <div class="card border-0">
            <div class="card-body p-4">
                <h5 class="fw-semibold mb-4">
                    <i class="bi bi-info-circle text-primary me-2"></i>Informations g√©n√©rales
                </h5>

                <div class="mb-4">
                    <label asp-for="Titre" class="form-label fw-semibold">
                        <i class="bi bi-type me-1"></i>Titre de l'annonce <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Titre" class="form-control form-control-lg" 
                           placeholder="Ex: iPhone 14 Pro Max 256Go - Excellent √©tat" />
                    <span asp-validation-for="Titre" class="text-danger small"></span>
                    <small class="text-muted">Un titre clair et pr√©cis attire plus d'acheteurs</small>
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label fw-semibold">
                        <i class="bi bi-text-paragraph me-1"></i>Description <span class="text-danger">*</span>
                    </label>
                    <textarea asp-for="Description" class="form-control" rows="5" 
                              placeholder="D√©crivez votre article en d√©tail : √©tat, caract√©ristiques, raison de la vente..."></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <label asp-for="Prix" class="form-label fw-semibold">
                            <i class="bi bi-currency-dollar me-1"></i>Prix (MAD) <span class="text-danger">*</span>
                        </label>
                        <div class="input-group">
                            <input asp-for="Prix" class="form-control" type="number" step="0.01" min="0" 
                                   placeholder="0.00" />
                            <span class="input-group-text">MAD</span>
                        </div>
                        <span asp-validation-for="Prix" class="text-danger small"></span>
                    </div>
                    <div class="col-md-4 d-flex align-items-end pb-2">
                        <div class="form-check">
                            <input asp-for="PrixNegociable" class="form-check-input" />
                            <label asp-for="PrixNegociable" class="form-check-label">
                                <i class="bi bi-chat-dots me-1"></i>Prix n√©gociable
                            </label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Etat" class="form-label fw-semibold">
                            <i class="bi bi-star me-1"></i>√âtat <span class="text-danger">*</span>
                        </label>
                        <select asp-for="Etat" class="form-select">
                            @foreach (var etat in Enum.GetValues(typeof(Web_AIA.Entities.EtatAnnonce)))
                            {
                                <option value="@etat">@etat</option>
                            }
                        </select>
                        <span asp-validation-for="Etat" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Ville" class="form-label fw-semibold">
                            <i class="bi bi-geo-alt me-1"></i>Ville <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Ville" class="form-control" placeholder="Ex: Casablanca" />
                        <span asp-validation-for="Ville" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ModeTransaction" class="form-label fw-semibold">
                            <i class="bi bi-truck me-1"></i>Mode de transaction <span class="text-danger">*</span>
                        </label>
                        <select asp-for="ModeTransaction" class="form-select">
                            @foreach (var mode in Enum.GetValues(typeof(Web_AIA.Entities.ModeTransaction)))
                            {
                                <option value="@mode">@mode</option>
                            }
                        </select>
                        <span asp-validation-for="ModeTransaction" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-tag me-1"></i>Cat√©gorie <span class="text-danger">*</span>
                    </label>
                    <select asp-for="CategorieId" class="form-select" id="categorie-select" 
                            asp-items="@(new SelectList(categories, nameof(Categorie.Id), nameof(Categorie.Nom)))">
                        <option value="">-- S√©lectionnez une cat√©gorie --</option>
                    </select>
                    <span asp-validation-for="CategorieId" class="text-danger small"></span>
                </div>

                <!-- Dynamic Fields Container -->
                <div id="dynamic-fields" class="border-top pt-4 mt-4">
                    <!-- Champs sp√©cifiques inject√©s par JS -->
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Photos Card -->
        <div class="card border-0 mb-4">
            <div class="card-body p-4">
                <h5 class="fw-semibold mb-4">
                    <i class="bi bi-images text-primary me-2"></i>Photos
                </h5>

                <div class="file-upload-wrapper">
                    <input asp-for="Photos" id="photos-input" type="file" class="file-upload-input" 
                           multiple accept="image/*" style="display: none;" />
                    <label for="photos-input" class="file-upload-label">
                        <div class="file-upload-icon">üì∑</div>
                        <div class="file-upload-text">
                            <strong>Cliquez pour ajouter</strong><br>
                            <small class="text-muted">ou glissez-d√©posez vos images</small>
                        </div>
                    </label>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>Max 5 photos, 5 Mo chacune
                    </small>
                    <small class="text-muted" id="photos-counter"></small>
                </div>

                <span asp-validation-for="Photos" class="text-danger small"></span>

                <!-- Preview Grid -->
                <div id="image-preview" class="image-preview-grid"></div>
            </div>
        </div>

        <!-- Tips Card -->
        <div class="card border-0 bg-light">
            <div class="card-body p-4">
                <h6 class="fw-semibold mb-3">
                    <i class="bi bi-lightbulb text-warning me-2"></i>Conseils photos
                </h6>
                <ul class="small text-muted mb-0 ps-3">
                    <li class="mb-2">Utilisez un bon √©clairage naturel</li>
                    <li class="mb-2">Montrez l'article sous plusieurs angles</li>
                    <li class="mb-2">Incluez des photos des d√©fauts √©ventuels</li>
                    <li>La premi√®re photo sera l'image principale</li>
                </ul>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="d-grid gap-2 mt-4">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-check-lg me-2"></i>Enregistrer l'annonce
            </button>
            <a class="btn btn-outline-secondary" asp-action="Index">
                <i class="bi bi-x-lg me-2"></i>Annuler
            </a>
        </div>
    </div>
</div>


