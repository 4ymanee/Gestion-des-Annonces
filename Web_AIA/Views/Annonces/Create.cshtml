@model Web_AIA.Models.AnnonceFormViewModel
@{
    ViewData["Title"] = "Publier une annonce";
}

<!-- Page Header -->
<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb small">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Accueil</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Annonces</a></li>
            <li class="breadcrumb-item active">Nouvelle annonce</li>
        </ol>
    </nav>
    <h1 class="h3 fw-bold">
        <i class="bi bi-plus-circle text-success me-2"></i>Publier une annonce
    </h1>
    <p class="text-muted mb-0">Remplissez les informations ci-dessous pour publier votre annonce</p>
</div>

<form asp-action="Create" method="post" enctype="multipart/form-data" id="annonce-form">
    <partial name="_Form" model="Model" />
</form>

@section Scripts {
    <partial name="_FormScripts" model="Model" />
}
